<p id="notice"><%= notice %></p>

<h1>Questions</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"> ID </th>
      <th colspan="3"> Question </th>
      <th colspan="3"> Options </th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <th colspan="3"> <%=question.id%> </th>
        <th colspan="3"> <%=question.name%> </th>
        <th colspan="3"> <%= select_tag "option", options_for_select(question.options.pluck(:name)) %> </th>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', new_question_path %>

